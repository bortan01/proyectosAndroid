<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:text="Datos personales!"
        android:textSize="24sp"
        />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textview"
        android:background="@drawable/esquinaredonda"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:hint="Nombre"
            android:textSize="18sp"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/apellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/nombre"
        android:background="@drawable/esquinaredonda"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:hint="Apellido"
            android:textSize="18sp"
            />
    </android.support.design.widget.TextInputLayout>
    <ToggleButton
         android:id="@+id/genero"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentStart="true"
         android:layout_below="@+id/apellido"
         android:layout_marginBottom="5dp"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
         android:layout_marginTop="5dp"
         android:text="TOGGLEBUTTON"
         android:textAllCaps="false"
         android:textOff="Masculino"
         android:textOn="Femenino"
     />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/genero"
        android:background="@drawable/esquinaredonda"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:hint="Telefono"
            android:textSize="18sp"
            android:inputType="phone"
            />
    </android.support.design.widget.TextInputLayout>

    <EditText
        android:id="@+id/edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/telefono"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/apellido"
        android:layout_toEndOf="@id/textview"
        android:background="@drawable/esquinaredonda"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="Edad"
        android:inputType="numberSigned"
        />
    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:layout_alignEnd="@id/telefono"
        android:layout_below="@id/telefono"
        android:fontFamily="sans-serif-condensed"
        android:onClick="onGuaardar"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:layout_alignStart="@+id/telefono"
        android:layout_alignTop="@id/btnGuardar"
        android:fontFamily="sans-serif-condensed"
        android:onClick="onCancelar"
        android:textAllCaps="false"
    />
    <Button
        android:id="@+id/boton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista"
       android:layout_alignTop="@id/btnCancelar"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:onClick="onLista"
        android:textAllCaps="false"
        />
</RelativeLayout>