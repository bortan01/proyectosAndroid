<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultadosActivity">


    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESULTADOS"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"

        />


    <Spinner
        android:id="@+id/numero"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultado"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp">


    </Spinner>

    <Spinner
        android:id="@+id/partidos"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numero"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >


    </Spinner>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultado"
        android:layout_alignStart="@+id/partidos"
        android:layout_marginStart="7dp"
        android:layout_marginTop="4dp"
        android:text="JORNADA" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="189dp"
        android:layout_marginEnd="223dp"
        android:text="GOL CASA"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="280dp"
        android:text="GOL VISITA"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/golcasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="182dp"
        android:ems="10"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/golvicita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="151dp"
        android:layout_marginTop="265dp"
        android:ems="10"
        android:inputType="number"
        />

    <ImageButton
        android:id="@+id/boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frase"
        android:layout_alignParentStart="true"
        android:layout_marginStart="171dp"
        android:layout_marginTop="11dp"
        android:background="@mipmap/ic_save"
        android:textAllCaps="false"
        app:srcCompat="@mipmap/ic_save"
        android:onClick="guardarResultado"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>