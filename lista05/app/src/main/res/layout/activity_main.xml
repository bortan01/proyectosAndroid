<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.informatica.usandolistas05api23.MainActivity">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="16dp"
        android:background="@color/colorGuardar"
        android:text="Guardar"
        android:onClick="guardar"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <Button
        android:id="@+id/cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/guardar"
        android:layout_alignBottom="@+id/guardar"
        android:layout_centerHorizontal="true"
        android:background="@color/colorCancelar"
        android:text="Cancelar"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <Button
        android:id="@+id/salir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cancelar"
        android:layout_alignBottom="@+id/cancelar"
        android:layout_alignParentEnd="true"
        android:background="@color/colorSalir"
        android:text="Salir"
        android:onClick="salir"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/guardar"
        android:layout_marginTop="43dp"
        android:text="TextView"
        tools:text="@string/tituloNose" />
</RelativeLayout>
